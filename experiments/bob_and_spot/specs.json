{
  "Description" : [ "This experiment learns an implict shape representation for bob, a genus-1 rubber duck, and spot, a genus-0 cow."],
  "DataSource" : "data",
  "TrainSplit" : "splits/bob_and_spot.json",
  "NetworkSpecs" : {
    "dims" : [ 128, 128, 128, 128, 128, 128, 128, 128 ],
    "dropout" : [0, 1, 2, 3, 4, 5, 6, 7],
    "dropout_prob" : 0.2,
    "norm_layers" : [0, 1, 2, 3, 4, 5, 6, 7],
    "latent_in" : [4],
    "xyz_in_all" : false,
    "use_tanh" : false,
    "latent_dropout" : false,
    "weight_norm" : true,
    "positional_encoding" : true,
    "fourier_degree" : 5
    },
  "CodeLength" : 2,
  "NumEpochs" : 4000,
  "LearningRateSchedule" : [
    {
      "Type" : "Step",
      "Initial" : 0.0005,
      "Interval" : 500,
      "Factor" : 0.5
    },
    {
      "Type" : "Step",
      "Initial" : 0.001,
      "Interval" : 500,
      "Factor" : 0.5
    }],
  "SamplesPerScene" : 32192,
  "ScenesPerBatch" : 2,
  "DataLoaderThreads" : 2,
  "ClampingDistance" : 0.1,
  "CodeRegularization" : true,
  "CodeRegularizationLambda" : 1e-4
}
